extends ../_template

block variables
  - var title = "Страница регистрации | JQuery Validation & Popup"

block content
  .registration
    .registration__column.registration__column_left
      .registration__images
    .registratin__column
      form.form(action="" method="post" novalidate)
        .form__row
          .form__column
            label.form__label(for="firstName") Имя
            input(type="text" id="firstName" class="form__input" name="firstName" required) 
            .form__input-message
          .form__column
            label.form__label(for="secondName") Фамилия
            input(type="text" id="secondName" class="form__input" name="secondName" required) 
        .form__row
          label.form__label(for="username") Логин
          input(type="text" id="username" class="form__input" name="username" required) 

        .form__row
          label.form__label(for="password") Пароль
          input(type="password" id="password" class="form__input" name="password" required)

        .form__row
          label.form__label(for="returnPassword") Повторите пароль
          input(type="password" id="returnPassword" class="form__input" name="returnPassword" required) 

        .form__row
          label.form__label(for="email") Почта
          input(type="text" id="email" class="form__input" name="email" required) 

        .form__row
          label.form__label(for="phone") Телефон
          input(type="tel" id="phone" class="form__input" name="phone" required)

        .form__row
          .form__column
            label.form__label(for="country") Страна
            input(type="text" id="country" class="form__input" name="country" required) 
          .form__column
            label.form__label(for="city") Город
            input(type="text" id="city" class="form__input" name="city" required) 

        .form__row
            button(type="submit" class="form__submit") Зарегистрировать аккаунт

  .popup-wrap
  .popup
    img(src="./assets/images/close.png").popup__close
    .popup__title Congratulation!
    img(src="./assets/images/success.png").popup__img
    .popup__text Вы успешно зарегистрировались. Держитесь здесь, вам всего доброго, хорошего настроения и здоровья.